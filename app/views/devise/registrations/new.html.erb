<h1 class="landing-title text-center"><span class="one">M</span>aintenance<span class="two">M</span>anagement<span class="three">P</span>latform</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <h2 class="landing-action">Sign up</h2>

  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control landing-form" %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'password (min 6 characters)' %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control landing-form" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'confirm password' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control landing-form" %>
  </div>

  <%= f.submit "Sign Up", class:'btn btn-landing-submit' %>
  <%= link_to 'Log in Here', new_user_session_path, class: 'btn btn-landing-link float-right' %>
<% end %>

<center>
  <%= link_to "forgot your password?", new_password_path(resource_name), class:'landing-link' %>
</center>

</div>
