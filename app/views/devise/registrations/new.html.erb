
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  
  
  <%= devise_error_messages! %>
<div class="form-flex-wrapper">
  <h2 class="signup-title">Sign up</h2>
  <div>
    <%= f.email_field :email, autofocus: true, placeholder: "user@example.com" %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (Min 6 chars)" %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
  </div>
  <div>
  <%= f.submit "Sign up", class: "btn btn-primary" %> or <%= link_to 'Log In', new_user_session_path %>
  </div>
<% end %>




</div>